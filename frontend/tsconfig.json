{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "dist/*"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "components": ["components"],
      "data": ["data"],
      "enums": ["enums"],
      "models/data": ["models/data"],
      "models/data/*": ["models/data/*"],
      "models/view": ["models/view"],
      "models/view/*": ["models/view/*"],
      "responses": ["responses"],
      "services": ["services"],
      "stores/data": ["stores/data"],
      "stores/view": ["stores/view"],

      "models": ["models/module"],

      "game/stores": ["components/game/stores/module"],
      "game/responses": ["components/game/responses/module"],
      "game/stores/*": ["components/game/stores/*"]
    }
  }
}
